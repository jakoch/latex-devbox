# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true

[*.tex]
indent_size = 2
trim_trailing_whitespace = true

[Dockerfile]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.yml, *.yaml, *.sh, *.json]
indent_style = space
indent_size = 2
